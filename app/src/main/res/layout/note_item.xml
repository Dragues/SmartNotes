<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@drawable/note_background"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/internatnoteview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/photo"
            android:layout_width="@dimen/icon_width"
            android:layout_height="@dimen/icon_width"
            android:layout_marginLeft="@dimen/icon_marginleft"
            android:layout_marginTop="@dimen/icon_margintop"
            android:adjustViewBounds="false"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:text="Header"
                android:textColor="#000000"
                android:textSize="@dimen/note_item_header_textsize"
                android:singleLine="true"/>


            <TextView
                android:id="@+id/body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Body"
                android:textColor="#000000"
                android:textSize="@dimen/note_item_body_textsize"
                android:singleLine="true"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <ImageView
            android:id="@+id/export"
            android:layout_width="@dimen/note_item_subicons"
            android:layout_height="@dimen/note_item_subicons"
            android:layout_marginRight="20dp"
            android:background="@drawable/exported" />

        <ImageView
            android:id="@+id/edit"
            android:layout_width="@dimen/note_item_subicons"
            android:layout_height="@dimen/note_item_subicons"
            android:layout_marginRight="20dp"
            android:background="@drawable/icn_edit_dark" />
            </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/coords_margintop"
        android:layout_gravity="center_horizontal"
        android:visibility="visible"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/coords"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="visible"
            android:layout_marginLeft="@dimen/coords_marginleft"
            android:text="@string/no_data"
            android:layout_weight="1">
        </TextView>



        </LinearLayout>
        </LinearLayout>

</LinearLayout>